# Required
OPENROUTER_API_KEY=sk-or-v1-your-key-here
PIPELINE_ENV=production

# Recommended — enables Cohere reranking
COHERE_API_KEY=your-cohere-key

# Recommended — enables Lakera L2 injection detection
LAKERA_API_KEY=your-lakera-key

# Langfuse (tracing)
LANGFUSE_PUBLIC_KEY=pk-lf-your-key
LANGFUSE_SECRET_KEY=sk-lf-your-key
LANGFUSE_HOST=http://langfuse:3000  # Docker internal

# Qdrant
QDRANT_HOST=qdrant  # Docker service name
QDRANT_PORT=6333
QDRANT_COLLECTION=documents

# RBAC — semicolon-separated key=role pairs
API_KEY_ROLES=sk-admin-changeme=security_admin;sk-worker-changeme=pipeline_worker;sk-ml-changeme=ml_engineer

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
